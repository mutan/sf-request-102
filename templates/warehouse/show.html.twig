{% extends 'base.html.twig' %}

{% block title %}Склад  {% endblock %}

{% block body %}
    <h1>Склад</h1>
    <hr>

    <table class="table table-hover table-sm">
        <tbody>
            <tr>
                <th style="width:1%">Id</th>
                <td>{{ warehouse.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ warehouse.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ warehouse.name }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ warehouse.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('warehouse_index') }}" role="button" class="btn btn-primary btn-sm">
        <i class="fas fa-list"></i> Список складов
    </a>

    <a href="{{ path('warehouse_edit', {'id': warehouse.id}) }}" role="button" class="btn btn-primary btn-sm">
        <i class="fas fa-edit"></i> Редактировать
    </a>

    {{ include('warehouse/_delete_form.html.twig') }}
{% endblock %}
