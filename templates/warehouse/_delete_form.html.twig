<form method="post"
      class="d-inline"
      action="{{ path('warehouse_delete', {'id': warehouse.id}) }}"
      onsubmit="return confirm('Точно удалить?');"
>
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ warehouse.id) }}">
    <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Удалить</button>
</form>
