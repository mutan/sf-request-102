{% extends 'base.html.twig' %}

{% block title %}Склады - список{% endblock %}

{% block body %}
    <h1>Склады <small class="text-muted">warehouses</small></h1>
    <hr>

    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <th style="width:1%">Id</th>
                <th>Код</th>
                <th>Название</th>
                <th>Активен</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for warehouse in warehouses %}
            <tr>
                <td>{{ warehouse.id }}</td>
                <td>{{ warehouse.code }}</td>
                <td>{{ warehouse.name }}</td>
                <td>{{ warehouse.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('warehouse_show', {'id': warehouse.id}) }}"
                       role="button" class="btn btn-primary btn-sm"
                    >
                        <i class="far fa-eye"></i>
                    </a>
                    <a href="{{ path('warehouse_edit', {'id': warehouse.id}) }}"
                       role="button" class="btn btn-primary btn-sm"
                    >
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Не найдено ни одной записи.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('warehouse_new') }}" role="button" class="btn btn-primary btn-sm">
        <i class="fas fa-plus"></i> Создать
    </a>
{% endblock %}
