{% extends 'base.html.twig' %}

{% block title %}NFL Teams{% endblock %}

{% block body %}

    <table class="table table-hover table-sm">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Logo</th>
            <th scope="col">Name</th>
            <th scope="col">Conference</th>
            <th scope="col">Division</th>
        </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <th width="1%" scope="row">{{ team.teamId }}</th>
                <td width="5%"><img src="{{ team.logoUrl }}" class="img-fluid" alt="..."></td>
                <td>{{ team.fullName }}</td>
                <td>{{ team.conference }}</td>
                <td>{{ team.division }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
